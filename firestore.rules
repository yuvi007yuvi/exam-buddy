rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users ---
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Admins can read all user profiles
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Only admins can create, update, or delete user documents
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Exams ---
    match /exams/{examId} {
      // All logged-in users can read exam info
      allow read: if request.auth != null;

      // Admins can manage exams
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Submissions ---
    match /submissions/{submissionId} {
      // Allow students to submit answers
      allow create: if request.auth != null;

      // Only admins can read submissions
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // Block updates and deletes
      allow update, delete: if false;
    }

    // --- Exam Results ---
    match /examResults/{resultId} {
      // Allow students to submit their result
      allow create: if request.auth != null;

      // Allow admins or owner to read result
      allow read: if request.auth != null &&
        (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          resource.data.userId == request.auth.uid
        );

      // Only admins or owner can update/delete
      allow update, delete: if request.auth != null &&
        (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
          resource.data.userId == request.auth.uid
        );
    }
  }
}
